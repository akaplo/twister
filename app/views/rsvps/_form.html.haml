= form_for @rsvp do |f|
  - if @rsvp.errors.any?
    %h2
      - pluralize(@rsvp.errors.count, "error")
      prohibited this rsvp from being saved:
    %ul
      - @rsvp.errors.full_messages.each do |msg|
        %li= msg
  %p
    = f.label :names
    %br
    = f.text_field :names

  %p
    = f.label :attending
    %br
    = f.text_area :attending

  %p
    = f.label :food_choice
    %br
    = f.text_area :food_choice

  %p
    = f.submit
