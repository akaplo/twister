-if flash[:error]
  %h2
    = pluralize(flash[:error].count, "error")
    prohibited this rsvp from being saved:
  %ul
    - flash[:error].each do |k, v|
      %li
        = k
        = v.first


= form_for @rsvp do |f|
  - if @rsvp.errors.any?
    %h2
      = pluralize(@rsvp.errors.count, "error")
      prohibited this rsvp from being saved:
    %ul
      - @rsvp.errors.full_messages.each do |msg|
        %li= msg
  %p
    = f.label :names
    %br
    = f.text_field :names

  %p
    = f.label :attending
    %br
    = f.label :yes
    = f.radio_button :attending, "true"
    = f.label :no
    = f.radio_button :attending, "false"

  %p
    = f.label :food_choice
    %br
    = f.text_area :food_choice

  %p
    = f.submit
